@{
    ViewData["Title"] = "Chat";
	                                                    
}
<div class="text-center">
	<img src="~/img/pokalbiai.jpg" alt="user" width=930px height=180px>
</div>   

<!DOCTYPE html>

	<head>
		<title>Chat</title>
	</head>
<body>
<div class="container-fluid h-100">
	<div class="row justify-content-center h-100">
		<div class="col-md-4 col-xl-4 chat"><div class="card mb-sm-5 mb-md-0 contacts_card">
			<div class="card-header">
				<div class="input-group">
					<input type="text" placeholder="Search..." name="" class="form-control search">
					<div class="input-group-prepend">
						<span class="input-group-text search_btn"><i class="fas fa-search"></i></span>
					</div>
				</div>
			</div>
			<div class="card-body contacts_body">
				<ui class="contacts">
					<li class="active">
						<div class="d-flex bd-highlight">
							<div class="img_cont">
								<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
								<span class="online_icon"></span>
							</div>
							<div class="user_info">
								<span>Kamile</span>
								<p>Kamile is online</p>
							</div>
						</div>
					</li>
					<li>
						<div class="d-flex bd-highlight">
							<div class="img_cont">
								<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
								<span class="online_icon offline"></span>
							</div>
							<div class="user_info">
								<span>Domas</span>
								<p>Domas left 7 mins ago</p>
							</div>
						</div>
					</li>
					<li>
						<div class="d-flex bd-highlight">
							<div class="img_cont">
								<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
								<span class="online_icon"></span>
							</div>
							<div class="user_info">
								<span>Adomas</span>
								<p>Adomas is online</p>
							</div>
						</div>
					</li>
					<li>
						<div class="d-flex bd-highlight">
							<div class="img_cont">
								<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
								<span class="online_icon offline"></span>
							</div>
							<div class="user_info">
								<span>Vaiva</span>
								<p>Vaiva left 30 mins ago</p>
							</div>
						</div>
					</li>
					<li>
						<div class="d-flex bd-highlight">
							<div class="img_cont">
								<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
								<span class="online_icon offline"></span>
							</div>
							<div class="user_info">
								<span>Rokas</span>
								<p>Rokas left 50 mins ago</p>
							</div>
						</div>
					</li>
				</ui>
			</div>
			<div class="card-footer"></div>
		</div></div>
		<div class="col-md-8 col-xl-6 chat">
			<div class="card">
				<div class="card-header msg_head">
					<div class="d-flex bd-highlight">
						<div class="img_cont">
							<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
							<span class="online_icon"></span>
						</div>
						<div class="user_info">
							<span>Pokalbis su Kamile</span>
							<p>1767 Messages</p>
						</div>
						<div class="video_cam">
							<span><i class="fas fa-video"></i></span>
							<span><i class="fas fa-phone"></i></span>
						</div>
					</div>
					<span id="action_menu_btn"><i class="fas fa-ellipsis-v"></i></span>
					<div class="action_menu">
						<ul>
							<li><i class="fas fa-user-circle"></i> View profile</li>
							<li><i class="fas fa-users"></i> Add to close friends</li>
							<li><i class="fas fa-plus"></i> Add to group</li>
							<li><i class="fas fa-ban"></i> Block</li>
						</ul>
					</div>
				</div>
				<div class="card-body msg_card_body">
					<div class="d-flex justify-content-start mb-4">
						<div class="img_cont_msg">
							<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
						</div>
						<div class="msg_cotainer">
							Labas, kada rytoj planuojate važiuoti?
							<span class="msg_time">8:40 AM, Today</span>
						</div>
					</div>
					<div class="d-flex justify-content-end mb-4">
						<div class="msg_cotainer_send">
							Sveiki, manau kad 7:30, ar jums tinka?
							<span class="msg_time_send">8:55 AM, Today</span>
						</div>
						<div class="img_cont_msg">
							<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
						</div>
					</div>
					<div class="d-flex justify-content-start mb-4">
						<div class="img_cont_msg">
							<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
						</div>
						<div class="msg_cotainer">
							Taip, viskas gerai. Ačiū
							<span class="msg_time">9:00 AM, Today</span>
						</div>
					</div>
					<div class="d-flex justify-content-end mb-4">
						<div class="msg_cotainer_send">
							Nėra už ką
							<span class="msg_time_send">9:05 AM, Today</span>
						</div>
						<div class="img_cont_msg">
							<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
							</div>
					</div>
					<div class="d-flex justify-content-start mb-4">
						<div class="img_cont_msg">
							<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
							</div>
						<div class="msg_cotainer">
							Laimingo kelio!
							<span class="msg_time">9:07 AM, Today</span>
						</div>
					</div>
					<div class="d-flex justify-content-end mb-4">
						<div class="msg_cotainer_send">
							O jums gražios dienos!
							<span class="msg_time_send">9:10 AM, Today</span>
						</div>
						<div class="img_cont_msg">
							<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
						</div>
					</div>
					<div class="d-flex justify-content-start mb-4">
						<div class="img_cont_msg">
							<img src="~/img/blank_profile.jpg" class="rounded-circle user_img">
						</div>
						<div class="msg_cotainer">
							Viso
							<span class="msg_time">9:12 AM, Today</span>
						</div>
					</div>
				</div>
				<div class="card-footer">
					<div class="input-group">
						<div class="input-group-append">
							<span class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></span>
						</div>
						<textarea name="" class="form-control type_msg" placeholder="Type your message..."></textarea>
						<div class="input-group-append">
							<span class="input-group-text send_btn"><i class="fas fa-location-arrow"></i></span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</body>


